<UserControl x:Class="Manga_Organizer.View.UserControls.Bookview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Manga_Organizer.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="684" d:DesignWidth="1080">
    <Grid>
        <ListBox Name="listBookCover"
                 Panel.ZIndex="-1"
                 Background="#585858"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                 Drop="Grid_Drop" 
                 AllowDrop="True">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        <Button Name="buttonExtract" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right" 
                Content="Show" 
                Height="50" 
                Width="100"
                Click="buttonExtract_Click"/>
        <Image Name="lmao"
               VerticalAlignment="top"
               HorizontalAlignment="left"
               Height="150"
               Margin="30"/>

    </Grid>
</UserControl>
